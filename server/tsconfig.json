{
	"compilerOptions": {
		"rootDir": "src",
		"target": "es2017",
		"module": "commonjs",
		"outDir": "dist",
		"allowJs": false,
		"composite": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"jsx": "react",
		"lib": ["es2018"],
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true
	},
	"include": ["src"],
	"exclude": [
		"dist",
		"node_modules",
		"**/__tests__/**",
		"**/__mocks__/**",
		"**/fixtures/**"
	]
}
